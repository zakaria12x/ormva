<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style parent="AppBaseTheme" name="stylemySpinner">
          <item name="android:background">#fff</item>
         <item name="android:textColor">#000</item>
    </style>
 <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#F29401</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style parent="android:Widget.ListView" name="Panellist">
          <item name="android:background">#fff</item>
         <item name="android:textColor">#000</item>
    </style>
    
    <style parent="android:Widget.Button" name="mybutton">
         <item name="android:background">#F29401</item>
         <item name="android:textColor">#FFFFFF</item>
 		 <item name="android:textSize">20sp</item>
         <item name="android:textStyle">bold</item>  
    </style>
    
</resources>
